<div class="form-signin-wrapper">
    <main class="form-signin text-center">
      {{#bs-form model=this onSubmit=(action "login") as |form|}}
        <img class="mb-4" src="images/logo-dark.png" alt="" height="57">
        <h1 class="h3 mb-3 fw-normal">{{t "login.title"}}</h1>
        {{#form.element controlType="email" property="email" as |el|}}
          {{el.control placeholder="name@example.com" required=true}}
        {{/form.element}}
         {{#form.element controlType="password" property="password" as |el|}}
          {{el.control placeholder=(t "login.passwordPlaceholder") required=true}}
        {{/form.element}}
         {{#each errors as |error|}}
            <div class="alert alert-danger" role="alert">{{t error.detail}}</div>
          {{/each}}
        {{form.element controlType="checkbox" label=(t "login.remember") property="checkbox"}}
        {{bs-button defaultText=(t "btn.enter") type="primary" buttonType="submit" class="w-100 btn-lg"}}
        <a class="w-100 d-block mt-3 cursor-pointer" onclick={{action "getBack"}}>{{t "btn.getBack"}}</a>
      {{/bs-form}}
    </main>
  </div>