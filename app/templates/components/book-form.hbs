{{#edit-form-container formTitle=formTitle targetName=name onsubmit=(action "submitForm")}}
  {{#input-text type="text" placeholder="Полное название книги" for="inputTitle" label="Название" value=name isInvalid=(and isInvalid (v-get this 'name' 'isInvalid'))}}
    {{#if (v-get this 'name' 'isInvalid')}}
     <div class="invalid-feedback">
        {{v-get this 'name' 'message'}}
      </div>
    {{/if}}
  {{/input-text}}
  {{#input-text type="text" placeholder="ФИО автора" for="inputAuthor" label="Автор" value=author isInvalid=(and isInvalid (v-get this 'author' 'isInvalid'))}}
    {{#if (v-get this 'author' 'isInvalid')}}
     <div class="invalid-feedback">
        {{v-get this 'author' 'message'}}
      </div>
    {{/if}}
  {{/input-text}}
  {{#input-text type="number" placeholder="Количество страниц книги" for="inputPagesCount" label="Объем" value=pagesCount isInvalid=(and isInvalid (v-get this 'pagesCount' 'isInvalid'))}}
    {{#if (v-get this 'pagesCount' 'isInvalid')}}
     <div class="invalid-feedback">
        {{v-get this 'pagesCount' 'message'}}
      </div>
    {{/if}}
  {{/input-text}}
  {{#input-text type="text" placeholder="Ссылка на сайт с описанием книги" for="inputDescriptionURL" label="Описание" value=descriptionUrl isInvalid=(and isInvalid (v-get this 'descriptionUrl' 'isInvalid'))}}
    {{#if (v-get this 'descriptionUrl' 'isInvalid')}}
     <div class="invalid-feedback">
        {{v-get this 'descriptionUrl' 'message'}}
      </div>
    {{/if}}
  {{/input-text}}
  {{#form-row for="customFile" label="Обложка" isFile="true"}}
    {{input-file for="customFile" label="Обложка" uploadData=uploadData uploadDataChanged=(action "changeUploadData")}}
  {{/form-row}}
  {{#form-row for="inputTags" label="Теги"}}
    {{input-tags for="inputTags" tags=tags onChange=(action "changeTags")}}
  {{/form-row}}
  {{#form-row isWithoutLabel="true"}}
    <button type="submit" class="btn btn-primary btn-lg">{{if isUploadingFile "Загрузка..." "Сохранить"}}</button>
    {{#link-to 'books.index' class="btn btn-outline-secondary btn-lg"}}Отмена{{/link-to}}
  {{/form-row}}
{{/edit-form-container}}